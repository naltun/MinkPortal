<%= simple_form_for(@raft) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :x_cord, required: true  %>
    <%= f.input :y_cord, required: true  %>
    <%= f.input :river, required: true  %>
    <%= f.input :catchment, required: true  %>
    <%= f.input :start_date , as: :date_picker%>
    <%= f.input :raft_code, required: true  %>
    <%= f.input :raft_or_tunnel, required: true  %>
    <%= f.input :status_change_date, as: :date_picker %>
    <%= f.input :raft_status, required: true  %>
    <%= f.input :contact_code, required: true  %>
    <%= f.input :organisation, required: true  %>
    <%= f.input :landowner_contact_code %>
    <%= f.input :dispatcher_contact_code, required: true  %>
    <%= f.input :access_notes %>
    <%= f.input :comments %>
       <!-- should contain line for inputting user_id - see dump.rb in the main directory -->
    <% f.input :created_by, :as => :hidden, :input_html => { :value => current_user.email } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
