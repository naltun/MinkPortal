<p id="notice"><%= notice %></p>

<h1>Listing Rafts</h1>

<table>
  <thead>
    <tr>
      <th>X cord</th>
      <th>Y cord</th>
      <th>River</th>
      <th>Catchment</th>
      <th>Start date</th>
      <th>Raft code</th>
      <th>Raft or tunnel</th>
      <th>Status change date</th>
      <th>Raft status</th>
      <th>Contact code</th>
      <th>Organisation</th>
      <th>Landowner contact code</th>
      <th>Dispatcher contact code</th>
      <th>Access notes</th>
      <th>Comments</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rafts.each do |raft| %>
      <tr>
        <td><%= raft.x_cord %></td>
        <td><%= raft.y_cord %></td>
        <td><%= raft.river %></td>
        <td><%= raft.catchment %></td>
        <td><%= raft.start_date %></td>
        <td><%= raft.raft_code %></td>
        <td><%= raft.raft_or_tunnel %></td>
        <td><%= raft.status_change_date %></td>
        <td><%= raft.raft_status %></td>
        <td><%= raft.contact_code %></td>
        <td><%= raft.organisation %></td>
        <td><%= raft.landowner_contact_code %></td>
        <td><%= raft.dispatcher_contact_code %></td>
        <td><%= raft.access_notes %></td>
        <td><%= raft.comments %></td>
        <td><%= raft.created_by %></td>
        <td><%= link_to 'Show', raft %></td>
        <td><%= link_to 'Edit', edit_raft_path(raft) %></td>
        <td><%= link_to 'Delete', raft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

