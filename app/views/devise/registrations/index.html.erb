<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "e-mail" %></th>
      <th><%= sortable "first_name" %></th>
      <th><%= sortable "last_name" %></th>
      <th><%= sortable "role" %></th>
      <th><%= sortable "organisation" %></th>
      <th><%= sortable "role_in_organisation" %></th>
      <th><%= sortable "contact_code" %></th>
      <th><%= sortable "monitor" %></th>
      <th><%= sortable "trapper" %></th>
      <th><%= sortable "newsletter" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.role %></td>
        <td><%= user.organisation %></td>
        <td><%= user.role_in_org %></td>
        <td><%= user.contact_code %></td>
        <td><%= user.monitor %></td>
        <td><%= user.trapper %></td>
        <td><%= user.newsletter %></td>
        <td><%= link_to 'Show', "/users/#{user.id}" %></td>
        <% if user.email == current_user.email %>
          <td></td>
        <% else %>
          <td><%= link_to 'Destroy', "/users/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
