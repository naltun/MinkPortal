
<%= simple_form_for @tsighting, :validate => true do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <script type="text/javascript" src="http://openspace.ordnancesurvey.co.uk/osmapapi/openspace.js?key=BD654B516C326FDAE0405F0AC8605893"></script>
  <script type="text/javascript">function init()
 {osMap = new OpenSpace.Map('map');
    
//set map centre in National Grid Eastings and Northings and select zoom level 0

    osMap.setCenter(new OpenSpace.MapPoint(438760,114760), 8);}
$(document).init();</script>

    <div class = "input_line"><%= f.input :x_coord %></div>
    <div class = "input_line"><%= f.input :y_coord %></div>
    <%= f.input :date, as: :date_picker, label: "Date (Press blue button below to pick or type date)", input_html: { id: 'adjusted_inputtext' } %>
     <%= f.input :contact_code %>
    <%= f.input :your_name, label: 'Name of the person who saw the mink'%>
    <%= f.input :contact_info, label: 'Contact details for person reporting mink', as: :text %>
    <%= f.select :reported_by, ["Volunteer", "General Public", "Professional"], label: "Reported by" %>
    <%= f.select :reported_to, ["Coordinator", "MinkApp", "CFFT", "DBIFT", "ERFT", "FNLFT", "LLTNP", "NBFT", "North Tay", "RDeeFT", "RDonFT", "RFFT", "SF", "WRFT", "WSFT"], label: "Reported to:" %>
    <%= f.select :catchment, ["Alness", "Assynt", "Balnagown", "Benholm", "Bervie", "Bogie", "Boyne", "Brothock", "Cape Wrath", "Colgach", "Conon", "Dee", "Deveron", "Dochart", "Cromarty Firth", "Don", "Dour", "Ericht", "Findhorn", "Fleet & Brora", "Forth - Allan Water", "Forth - Almond", "Forth - Avon", "Forth Beil Water", "Forth - Black Devon", "Forth - Carron", "Forth - Deveon", "Forth - Esk", "Forth - Leven", "Forth - Teith", "Forth - Tyne", "Forth - Water of Leith", "Forth - Fife Coastal", "Forth - East Lothian Costal", "Gardenstown", "Garry", "Gruinard", "Isla", "Isla (Deveron)", "Kylesku", "Loch Earn", "Lossie", "Lunan Water", "Moray Firth","Nairn", "Naver", "Ness & Beauty", "Oykel & Kyle of Sutherland", "North Esk", "South Esk", "Runie", "Spey", "Stonehaven & Porthelen", "Strathbeg & Coastal", "Tay", "Troup", "Tummel", "Ugie", "Water of Cruden & Coastal", "Water of Philorth", "Ythan", "Other"] %>
    <%= f.input :river, label: 'River/Burn/Loch' %>
    <%= f.input :no_of_minks, :collection => 1..10, label: "No of mink" %>
    <%= f.input :status, :collection => ["Dead", "Alive"] %>
    <%= f.select :follow_up, ["Raft deployed", "Nearby volunteers notified", "Quick response activated", "New volunteer sought for new raft", "No action taken"], label: "Follow up" %>
    <%= f.input :comments, as: :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create sighting" %>
  </div>
<% end %>

