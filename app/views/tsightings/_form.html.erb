
<%= simple_form_for @tsighting, :validate => true do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :x_coord %>
    <%= f.input :y_coord %>
    <%= f.input :date, as: :date_picker %>
    <%= f.input :your_name %>
    <%= f.input :contact_info, hint: 'Email address or tel. no.' %>
    <%= f.input :catchment %>
    <%= f.input :river %>
    <%= f.input :no_of_minks, :collection => 1..5 %>
    <%= f.input :status, :collection => ["Dead", "Alive"] %>
    <%= f.input :comments, as: :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
