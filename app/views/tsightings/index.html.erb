<p id="notice"><%= notice %></p>

<h1>Listing Sightings</h1>

<table id="tsightings" data-source="<%= tsightings_url(format: "json") %>">
  <thead>
    <tr>
      <th><%= sortable "date" %></th>
      <th><%= sortable "contact_code" %></th>
      <th><%= sortable "your_name" %></th>
      <th><%= sortable "catchment" %></th>
      <th><%= sortable "river" %></th>
      <th><%= sortable "no_of_mink" %></th>
      <th><%= sortable "status" %></th>
      <th><%= sortable "follow_up" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tsightings.each do |tsighting| %>
      <tr>
        <td><%= tsighting.date %></td>
        <td><%= tsighting.contact_code %></td>
        <td><%= tsighting.your_name %></td>
        <td><%= tsighting.catchment %></td>
        <td><%= tsighting.river %></td>
        <td><%= tsighting.no_of_mink %></td>
        <td><%= tsighting.status %></td>
        <td><%= tsighting.follow_up %></td>
        <td><%= link_to 'Show', tsighting %></td>
        <% if can? :manage, :all %>
          <td><%= link_to 'Edit', edit_tsighting_path(tsighting) %></td>
        <% end %>
        <% if can? :manage, Tsighting %>
          <td><%= link_to 'Destroy', tsighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

